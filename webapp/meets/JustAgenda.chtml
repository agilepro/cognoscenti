<html>
<style>
.emailbody {
    font-family: Arial,Helvetica Neue,Helvetica,sans-serif; 
    border-bottom: 2px solid skyblue;
    padding:5px;
    text-align: center;
}
.niceTable {
    width: 100%;
    max-width:800px;  
}
.niceTable tr td { 
    padding:8px;
    vertical-align: top;   
}
.smallPrint {
    font-size:-2;
}
</style>
<body>
<div style="max-width:800px">
<!--TEMPLATE FlatDetailAgenda.chtml-->

<div class="emailbody"><div class="h1" style="float:center">{$name|html}</div></div>


<table class="niceTable">
{% loop in $agenda as $agItem counter=$i,1 %}
{% if ($agItem.isSpacer != true) %}
<tr>
<td><b>{$agItem.number}.</b></td>
<td><b>{$agItem.subject|html}</b><br/>
     <i>({$duration} minutes)</i><br/>
</td>
</tr>
{% else %}
<tr style="background-color:#EEEEEE">
<td></td>
<td>{$agItem.subject|html}
</td>
</tr>
{% endif %}
{% onEmpty %}
No agenda items specified for this meeting
{% endloop %}
</table>

</div>





</body></html>
