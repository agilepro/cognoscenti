<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
        <context-param>
            <param-name>maxSize</param-name>
            <param-value>314572800</param-value>
        </context-param>


        <context-param>
                    <param-name>contextConfigLocation</param-name>
                    <param-value>WEB-INF/dispatcher-servlet.xml</param-value>
        </context-param>

        <!-- ========================================================== -->
        <!-- ====== The NGFilter Filter for release resource lock ===== -->
        <!-- ========================================================== -->
        <filter>
            <filter-name>NGFilter</filter-name>
            <filter-class>com.purplehillsbooks.weaver.NGFilter</filter-class>
        </filter>

        <filter-mapping>
            <filter-name>NGFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>


         <listener>
            <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
         </listener>


    <!--servlet>
        <servlet-name>DataFeedServlet</servlet-name>
        <servlet-class>com.purplehillsbooks.weaver.rest.DataFeedServlet</servlet-class>
    </servlet-->
    <!--servlet-mapping>
        <servlet-name>DataFeedServlet</servlet-name>
        <url-pattern>/servlet/DataFeedServlet</url-pattern>
    </servlet-mapping-->
    
    

    <servlet>
        <servlet-name>apiServlet</servlet-name>
        <servlet-class>com.purplehillsbooks.weaver.api.APIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>apiServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    
    
    <!--servlet>
        <servlet-name>apuServlet</servlet-name>
        <servlet-class>com.purplehillsbooks.weaver.api.APUServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>apuServlet</servlet-name>
        <url-pattern>/apu/*</url-pattern>
    </servlet-mapping-->

    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>com.purplehillsbooks.weaver.api.LightweightAuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>iconServlet</servlet-name>
        <servlet-class>com.purplehillsbooks.weaver.api.IconServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>iconServlet</servlet-name>
        <url-pattern>/icon/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>com.purplehillsbooks.weaver.spring.SpringServletWrapper</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/t/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/v/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>EmergencyConfigServlet</servlet-name>
        <servlet-class>com.purplehillsbooks.weaver.rest.EmergencyConfigServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmergencyConfigServlet</servlet-name>
        <url-pattern>/init/*</url-pattern>
    </servlet-mapping>

   <security-constraint>
    <web-resource-collection>
        <web-resource-name>Deny Direct Access</web-resource-name>
        <description>
        Deny direct access to JSPs by associating them with denied role
        </description>
        <url-pattern>/springbogus/*</url-pattern>
        <http-method>GET</http-method>
        <http-method>POST</http-method>
    </web-resource-collection>

    <auth-constraint>
        <role-name>Denied</role-name>
    </auth-constraint>

  </security-constraint>

  <security-role>
    <role-name>Denied</role-name>
  </security-role>


</web-app>
